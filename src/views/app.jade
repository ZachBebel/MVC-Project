extends ./base.jade
block append style
  link(rel="stylesheet", type="text/css", href="/assets/style.css")
block body
  nav
    a(href="/login")
      img#logo(src="/assets/img/face.png", alt="face logo")
    .navlink
      a(href="/logout") Log out
  section#makeDomo
    form#domoForm(class="domoForm", name="domoForm", action="/maker", method="POST")
      label(for="name") Name: 
      input#domoName(type="text", name="name", placeholder="Domo Name")
      label(for="age") Age: 
      input#domoAge(type="text", name="age", placeholder="Domo Age")
      label(for="bloodType") Blood Type: 
      input#domoAge(type="text", name="bloodType", placeholder="Domo Blood Type")
      input(type="hidden", name="_csrf", value="#{csrfToken}")
      a#makeDomoSubmit(class="makeDomoSubmit", href="#") Make Domo
    p#errorMessage
  section#domos
    if !domos || domos.length == 0
      div.domo
        h3.emptyDomo No Domos yet
    else
      each val in domos
        div.domo
          img(class="domoFace", src="/assets/img/domoface.jpeg", alt="domo face")
          h3.domoName Name: 
            span #{val.name}
          h3.domoAge Age: 
            span #{val.age}
          h3.domoBloodType Blood Type: 
            span #{val.bloodType}
          button(class="deleteDomo", action="/delete", method="POST") Delete
block scripts
  script(src="/assets/maker.js")